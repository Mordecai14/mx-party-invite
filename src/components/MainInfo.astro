<style>
    .boxC{
        background-image: url("../assets/fondoMini.png");
        background-position: center;
        background-size: cover;
    }
    .drop{
        filter: drop-shadow(5px 5px 10px #000000b5);
    }
    .animate-charcter {
    text-transform: uppercase;
    background-image: linear-gradient(
        -225deg,
        #0fc80c 0%,
        #0fc80c 30%,
        #ffffff 50%,
        #ff1361 70%,
        #ff1361 100%
    );
    background-size: auto auto;
    background-clip: border-box;
    background-size: 200% auto;
    color: #fff;
    background-clip: text;
    text-fill-color: transparent;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: textclip 2s linear infinite, jump 1s ease-in-out infinite;
    display: inline-block;
}

@keyframes textclip {
    to {
        background-position: 200% center;
    }
}

@keyframes jump {
    0%, 100% {
        transform: scale(0.9);
    }
    50% {
        transform: scale(1.2);
    }
}
.img-c{
    transform: translate(50%, -53%);
    width: 251px;
    z-index: -1;
    opacity: 0.8;
    right: 50%
}

.img-flor-l{
    transform: translate(-62%, -10%) rotate(-111deg);
    width: 161px;
    z-index: -1;
    left: 0;
    top: 0%;
}
.img-flor-r{
    transform: translate(62%, -10%) rotate(21deg);
    width: 161px;
    z-index: -1;
    right: 0;
    top: 0%;
}
