---
import Pinata from "../components/react/Pinata";
import MainInfo from "../components/MainInfo.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>Cumpleaños - Farith</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/assets/4.png" />

		<meta property="og:image" content="/Farith_logo_mini.png" />

		<!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Paytone+One&family=Rampart+One&display=swap"
			rel="stylesheet"
		/> -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Rye&display=swap"
			rel="stylesheet"
		/>
		<style is:global>
			:root {
				font-family: "Paytone One", "Rye", sans-serif;
				/* font-family: "Rampart One", cursive; */
			}
			html,
			body {
				margin: 0;
				padding: 0;
				height: 100%;
				background-color: #000;
			}
			body {
				display: flex;
				justify-content: center;
				background-color: #000;
			}
			main {
				background-color: #000;
				padding: 0 2rem 2rem 2rem;
				width: 100%;
				max-width: 600px;
				box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
			}
		</style>
	</head>
	<body>
		<main class="text-white">
			<Pinata />
			<MainInfo />
			<div>Diseños</div>
			<div>Información general</div>
			<div>Footer</div>
		</main>
	</body>
</html>
